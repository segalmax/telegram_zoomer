{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run All Tests (with logs)",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "python": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "tests/",
                "-s",
                "--log-cli-level=DEBUG",
                "--log-cli-format=%(name)s - %(levelname)s - %(message)s",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "local"
            }
        },
        {
            "name": "Django Admin DEV",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "8000"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "local"
            }
        },
        {
            "name": "Django Admin PROD",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "8010"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "prod"
            }
        },
        {
            "name": "Streamlit DEV",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "streamlit_app.py", "--server.port", "8030", "--server.runOnSave", "true"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "local"
            }
        },
        {
            "name": "Streamlit PROD",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "streamlit_app.py", "--server.port", "8020", "--server.runOnSave", "true"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "prod"
            }
        },
        {
            "name": "Bot TEST Mode",
            "type": "python",
            "request": "launch",
            "module": "app.bot",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUPABASE_ENV": "local",
                "TEST_MODE": "true",
                "TEST_SRC_CHANNEL": "@nyttest",
                "TEST_DST_CHANNEL": "@nytzoomerutest"
            }
        }
    ]
} 